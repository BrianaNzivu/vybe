<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstRegister"
    android:background="@drawable/firstreg">
    <Button
        android:id="@+id/firstregemail"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
        android:drawablePadding="5dp"
        android:text="Sign Up with Email"
        android:textColor="#eeeeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faceebook" />

    <Button
        android:id="@+id/faceebook"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_facebook"
        android:text="Sign Up with FaceBook"
        android:textColor="#eeeeee"
        app:layout_constraintBottom_toTopOf="@+id/firstregemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google" />


    <Button
        android:id="@+id/google"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/ic_google"
        android:text="Sign Up with Google"
        android:textColor="#eeeeee"
        app:layout_constraintBottom_toTopOf="@+id/faceebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="76dp"
        android:text="You have an account?"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/loginfirstreg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstregemail"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="121dp" />

    <TextView
        android:id="@+id/loginfirstreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="76dp"
        android:text="Log In"
        android:textColor="#ff8300"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/firstregemail"
        android:layout_marginRight="109dp"
        android:layout_marginLeft="3dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="195dp"
        android:layout_height="204dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="58dp"
        android:text="Hello!            Start by becoming One of us"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/black"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />
</androidx.constraintlayout.widget.ConstraintLayout>

